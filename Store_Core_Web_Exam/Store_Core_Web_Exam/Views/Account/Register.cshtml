@model Store_Core_Web_Exam.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Введите Email</label><br />
            <div class="col-sm-10">
                <input type="text" asp-for="Email"  class="form-control-plaintext"/>
                <span asp-validation-for="Email" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Введите пароль</label><br />
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" />
            </div>
        </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label">Повторите пароль</label><br />
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Регистрация" class="btn btn-outline-dark"/>
                </div>
            </div>
     </div>
</form>
