@model Store_Core_Web_Exam.ViewModels.LoginModel

<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Введите Email</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Email" class="form-control" />           
               <span asp-validation-for="Email" />

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Введите пароль</label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>
