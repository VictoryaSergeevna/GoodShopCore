@model IEnumerable<Store_Core_Web_Exam.Models.Good>
@{
    ViewData["Title"] = "Search";
}
<div id="searchres">
    <h2>Все товары категорий: @Model.First().Category.CategoryName</h2>
    <ul class="list-group list-group-flush">
        @foreach (var item in Model)
        {
        <li class="list-group-item"> <img src="@Url.Content(item.Path)" style="width:50px;height:50px" /></li>
            <li class="list-group-item">@item.Title</li>            
            <li class="list-group-item">@item.Price</li>
        }
    </ul>

</div>
